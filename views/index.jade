extend layout

block content
  section
    h2 current token
    p.token

  section
    h3 Choose an image
    form(method='post', action='/service')
      #preview
      input(type='file', id='photo-picker', class='content')

  section
    h3 Click on 1-4 services below
    h2 (you can choose the same one more than once!)
    p.services-added
    ol#service-list

  section
    form(method='post', action='/service')
      textarea(name='content', id='photo')
      input(type='hidden', name='token', id="token")
      input(type='hidden', id='services', name='services', value='')
      button(type='button', class='button reset', id='reset') &#8667;
        span Reset
      button(type='submit', class='button', id='create') &#8667;
        span Create!

  script(type='text/javascript', src='/js/bundle.js')
